<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_journal_cupon_form_inherit" model="ir.ui.view">
        <field name="name">account.journal.account_journal_cupon.form</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='journal_user']" position="after">
                <field name="iscoupon"
                    attrs="{'invisible': [('journal_user', '=', False)]}"
                />
            </xpath>
        </field>
    </record>
</odoo>